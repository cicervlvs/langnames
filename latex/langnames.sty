\newcommand{\lname}[1]{%
  \csname KV@names@#1\endcsname\unskip
}

\newcommand{\liso}[1]{%
  \csname KV@names@#1\endcsname{} (ISO 639-3: #1)\unskip
}

\newcommand{\lfam}[1]{%
  \csname KV@names@#1\endcsname{} (\csname KV@fams@#1\endcsname{})\unskip
}
   
\newcommand{\newlang}[3]{%
  \define@key{names}{#1}{#2}
  \define@key{fams}{#1}{#3}
}

